@page
@model StuartsBookstores.Pages.AddBookstoreModel
@{
}

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-2"><b>Name</b>:</div>
            <div class="col-2"><input type="text" name="name" required /></div>
        </div>
        <div class="row">
            <div class="col-2">Photo:</div>
            <div class="col-2"><input type="file" name="file" /></div>
        </div>
        <div class="row">
            <div class="col-2">Address:</div>
            <div class="col-2"><input type="text" name="address" /></div>
        </div>
        <div class="row">
            <div class="col-2"><b>City</b>:</div>
            <div class="col-2"><input type="text" name="city" required /></div>
        </div>
        <div class="row">
            <div class="col-2"><b>State</b>:</div>
            <div class="col-2"><input type="text" name="state" required /></div>
        </div>
        <div class="row">
            <div class="col-2">Zip:</div>
            <div class="col-2"><input type="text" name="zip" /></div>
        </div>
        <div class="row">
            <div class="col-2"><b>Country</b>:</div>
            <div class="col-2"><input type="text" name="country" required /></div>
        </div>
        <div class="row">
            <div class="col-2">Latitude:</div>
            <div class="col-2"><input type="text" name="latitude" /></div>
        </div>
        <div class="row">
            <div class="col-2">Longitude:</div>
            <div class="col-2"><input type="text" name="longitude" /></div>
        </div>
        <div class="row">
            <div class="col-2">Website:</div>
            <div class="col-2"><input type="text" name="website" /></div>
        </div>
        <div class="row">
            <div class="col-2">Date Visited:</div>
            <div class="col-2"><input type="text" name="dateVisited" /></div>
        </div>
        <input type="submit" name="addNewBookstore" value="Add Bookstore" />
    </div>

</form>